{
  "name": "iot-device-simulator",
  "version": "1.0.0",
  "private": true,
  "description": "Device Simulator to easily prototype",
  "main": "server.js",
  "babel": {
    "presets": ["env"]
  },
  "watch": {
    "watch:js": "src/assets/js/*.js",
    "watch:less": {
      "patterns": "src/assets/less",
      "extensions": "less"
    },
    "watch:img": {
      "patterns": "src/assets/img",
      "extensions": "jpg,jpeg,svg,png,ico"
    }
  },
  "scripts": {
    "watch": "npm-watch",
    "start": "node ./bin/www",
    "dev": "nodemon ./bin/www",
    "postinstall": "bower install",
    "test": "mocha test",
    "build:css": "lessc src/assets/less/main.less public/css/app.min.css -x",
    "watch:less": "npm run build:css",
    "babelify": "babel src/assets/js --out-file src/compiled/script-compiled.js",
    "build:js": "npm run babelify && uglifyjs src/compiled/*.js -o public/js/app.min.js",
    "watch:js": "npm run build:js",
    "build:img": "imagemin src/assets/img/* --out-dir=public/img",
    "watch:img": "npm run build:img",
    "build": "npm run build:css && npm run build:js && npm run build:img"
  },
  "author": "Simon Temmerman",
  "email": "simon.temmerman@delaware.pro",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.15.0",
    "bower": "^1.8.0",
    "express": "^4.13.4",
    "express-handlebars": "^3.0.0",
    "helmet": "^2.1.0",
    "morgan": "^1.7.0",
    "ms": "^0.7.1",
    "subdomain": "^1.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-env": "^1.4.0",
    "chai": "^3.5.0",
    "cheerio": "^0.20.0",
    "debug": "^2.2.0",
    "errorhandler": "^1.4.3",
    "imagemin-cli": "^3.0.0",
    "less": "^2.7.1",
    "minifier": "^0.8.0",
    "mocha": "^2.5.3",
    "npm-watch": "^0.1.6",
    "rimraf": "^2.4.3",
    "supertest": "^1.2.0",
    "uglify-js": "^2.7.3"
  }
}
